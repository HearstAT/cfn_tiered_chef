      "PublicA"    : { "CIDR" : "172.33.10.0/24" },
      "PublicB"    : { "CIDR" : "172.33.20.0/24" },
      "Private"    : { "CIDR" : "172.33.40.0/24" }
    }
  },
  "Conditions" : {
    "CreateChefBucket" : {"Fn::Equals" : [{"Ref" : "UseExistingBucket"}, "false"]},
    "ExternalCookbooks" : {"Fn::Equals" : [{"Ref" : "CookbookChoice"}, "external"]},
    "ExistingIAM" : {"Fn::Equals" : [{"Ref" : "ExistingIAM"}, "true"]}
  },
  "Resources" : {
    "PublicSubnetA" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
        "AvailabilityZone" : { "Ref": "AvailabilityZoneA" },
        "CidrBlock" : { "Fn::FindInMap" : [ "SubnetConfig", "PublicA", "CIDR" ] },
        "Tags" : [
          { "Key" : "Name", "Value" : "Chef-Public-Subnet" },
          { "Key" : "Application", "Value" : { "Ref" : "AWS::StackId" } },
          { "Key" : "Network", "Value" : "Public" }
        ]
      }
    },
    "PublicSubnetB" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
        "AvailabilityZone" : { "Ref": "AvailabilityZoneB" },
        "CidrBlock" : { "Fn::FindInMap" : [ "SubnetConfig", "PublicB", "CIDR" ] },
        "Tags" : [
          { "Key" : "Name", "Value" : "Chef-Public-Subnet" },
          { "Key" : "Application", "Value" : { "Ref" : "AWS::StackId" } },
          { "Key" : "Network", "Value" : "Public" }
        ]
      }
    },
    "PrivateSubnet" : {
      "Type" : "AWS::EC2::Subnet",
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
        "CidrBlock" : { "Fn::FindInMap" : [ "SubnetConfig", "Private", "CIDR" ] },
        "Tags" : [
          { "Key" : "Name", "Value" : "Chef-Private-Subnet" },
          { "Key" : "Application", "Value" : { "Ref" : "AWS::StackId" } },
          { "Key" : "Network", "Value" : "Private" }
        ]
      }
    },
    "ChefBucket" : {
      "Type" : "AWS::S3::Bucket",
      "Condition" : "CreateChefBucket",
      "DeletionPolicy" : "Retain",
      "Properties" : {
        "AccessControl" : "Private"
      }
    },
    "ChefRole": {
        "Type": "AWS::IAM::Role",
        "Properties": {
           "AssumeRolePolicyDocument": {
              "Version" : "2012-10-17",
              "Statement": [ {
                 "Effect": "Allow",
                 "Principal": {
                    "Service": [ "ec2.amazonaws.com" ]
                 },
                 "Action": [ "sts:AssumeRole" ]
              } ]
           },
           "Path": "/"
        }
    },
    "RolePolicies": {
        "Type": "AWS::IAM::Policy",
        "Properties": {
          "PolicyName": "chef-s3",
          "PolicyDocument": {
            "Version" : "2012-10-17",
            "Statement":[
            {
                "Effect":"Allow",
                "Action": [ "s3:*" ],
                "Resource": [ { "Fn::Join" : [ "", [ "arn:aws:s3:::",{"Fn::If" : ["CreateChefBucket", {"Ref" : "ChefBucket"}, {"Ref" : "ExistingBucket"}]}, "/" ] ] },
                              { "Fn::Join" : [ "", [ "arn:aws:s3:::", {"Fn::If" : ["CreateChefBucket", {"Ref" : "ChefBucket"}, {"Ref" : "ExistingBucket"}]}, "/*" ] ] } ]
            },
            {
                "Effect":"Allow",
                "Action": [ "s3:List*" ],
                "Resource": "arn:aws:s3:::*"
            } ]
          },
          "Roles": [ { "Ref": "ChefRole" } ]
      }
    },
     "ChefInstanceProfile": {
        "Type": "AWS::IAM::InstanceProfile",
        "Properties": {
           "Path": "/",
           "Roles": [ {
              "Ref": "ChefRole"
           } ]
        }
    },
    "ChefServerUser" : {
      "Type" : "AWS::IAM::User",
      "Condition" : "ExistingIAM",
      "Properties" : {
        "Path": "/",
        "Policies": [{
          "PolicyName": "ChefCookbooks",
          "PolicyDocument": {
              "Version" : "2012-10-17",
              "Statement":[
                {
                    "Effect":"Allow",
                    "Action": [ "s3:*" ],
                    "Resource": [{ "Fn::Join" : [ "", [ "arn:aws:s3:::", { "Ref" : "CookbookBucket" }, "/" ] ] },
                                 { "Fn::Join" : [ "", [ "arn:aws:s3:::", { "Ref" : "CookbookBucket" }, "/*" ] ] } ]
                },
                {
                    "Effect":"Allow",
                    "Action": [ "s3:List*" ],
                    "Resource": "arn:aws:s3:::*"
                } ]
          }
        }]
      }
    },
    "HostKeys" : {
      "Type" : "AWS::IAM::AccessKey",
      "Condition" : "ExistingIAM",
      "Properties" : {
        "UserName" : {"Ref" : "ChefServerUser"}
      }
    },
    "BackendSecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription" : "Allow access from frontend security group as well as outbound HTTP and HTTPS traffic",
        "VpcId" : { "Ref" : "VPC" },
        "SecurityGroupIngress" : [
